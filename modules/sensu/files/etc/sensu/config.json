{
  "rabbitmq": {
    "ssl": {
      "private_key_file": "/etc/sensu/ssl/client_key.pem",
      "cert_chain_file": "/etc/sensu/ssl/client_cert.pem"
    },
    "port": 5671,
    "host": "localhost",
    "user": "sensu",
    "password": "sensu",
    "vhost": "/sensu"
  },
  "redis": {
    "host": "localhost",
    "port": 6379
  },
  "api": {
    "host": "localhost",
    "port": 4567
  },
  "dashboard": {
    "host": "localhost",
    "port": 8080,
    "user": "admin",
    "password": "secret"
  },
  "checks": {
    "cron_check": {
      "handlers": ["default"],
      "command": "/etc/sensu/plugins/check-procs.rb -p crond -C 1 ",
      "interval": 60,
      "subscribers": [ "webservers" ]
    },
    "http_metrics": {
      "type": "metric",
      "handlers": ["graphite"],
      "command": "/etc/sensu/plugins/http-metrics.rb -h www.google.com -p 80 --scheme stats.:::name:::",
      "interval": 60,
      "subscribers": [ "webservers" ]
     }
  },
  "handlers": {
    "default": {
      "type": "pipe",
      "command": "mail -s 'sensu alert' your@address"
    },
    "graphite": {
      "type": "pipe",
      "command": "/etc/sensu/handlers/metrics/graphite-tcp.rb"
    }
  } 
}
